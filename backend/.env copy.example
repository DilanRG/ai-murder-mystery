# AI Murder Mystery Game - Environment Configuration
# Copy this file to .env and fill in your values

# --- LLM Provider ---
LLM_PROVIDER=openrouter
LLM_OPENROUTER_API_KEY=sk-or-v1-your-key-here
LLM_MODEL=openai/gpt-4o-mini
LLM_MAX_CONTEXT_TOKENS=8192
LLM_MAX_RESPONSE_TOKENS=1024

# --- Sampler Defaults ---
SAMPLER_TEMPERATURE=0.9
SAMPLER_TOP_P=0.95
SAMPLER_TOP_K=40
SAMPLER_REPETITION_PENALTY=1.1

# --- Game ---
GAME_MAX_TURNS=30
GAME_LOCATIONS_COUNT=6

# --- App ---
APP_DEBUG=false
APP_HOST=127.0.0.1
APP_PORT=8765
